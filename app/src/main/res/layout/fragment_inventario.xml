<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Vistas.Inventario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageButton
                android:id="@+id/estructuraI"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/gris_fondo"
                android:scaleType="fitCenter"
                android:transitionName="imagen_compartida"
                android:src="@drawable/sincronizar_estructura"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="3"
                android:padding="1dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/black"
                android:text="Sincronizar estuctura"
                android:textSize="26sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageButton
                android:id="@+id/bodegasI"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/gris_fondo"
                android:scaleType="fitCenter"
                android:transitionName="imagen_compartida"
                android:src="@drawable/sincronizar_bodega"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="3"
                android:padding="1dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/black"
                android:text="Sincronizar bodegas"
                android:textSize="26sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageButton
                android:id="@+id/resumenI"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/gris_fondo"
                android:scaleType="fitCenter"
                android:transitionName="imagen_compartida"
                android:src="@drawable/resumen_inventario"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="3"
                android:padding="1dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/black"
                android:text="Resumen de inventario"
                android:textSize="26sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageButton
                android:id="@+id/consultaI"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/gris_fondo"
                android:scaleType="fitCenter"
                android:transitionName="imagen_compartida"
                android:src="@drawable/consulta_barril"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="3"
                android:padding="1dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/black"
                android:text="Consulta barril"
                android:textSize="26sp" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>