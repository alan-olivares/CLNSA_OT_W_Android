<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CLNSA_OT_W" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gris_obscuro</item>
        <item name="colorPrimaryVariant">@color/azul_menu</item>
        <item name="colorOnPrimary">@color/gris</item>
        <!-- Secondary brand color. -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gris</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->

    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/white</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.CLNSA_OT_W.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialog_light" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <style name="Theme.CLNSA_OT_W.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CLNSA_OT_W.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>